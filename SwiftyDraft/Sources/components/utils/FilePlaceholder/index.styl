@import '../../../utils/colors'

file-placeholder // @stylint off
  user-select: none

.file-placeholder
  max-width: 650px
  height: 65px
  padding: 12px 24px
  background-color: $white-color
  border: 1px solid rgba($black-color, .1)
  border-radius: 5px
  cursor: default
  position: relative
  z-index: 1
  overflow: hidden
  display: block
  a&
    cursor: pointer
    &:hover, &:focus, &:active
      text-decoration: none
  .file-icon
    float: left
    width: 24px
    margin-right: 24px
    margin-top: 4px
    img
      max-width: 100% !important // @stylint ignore
      height: auto
  .right-side
    float: right
    line-height: 1
    .file-placeholder-download-button
      vertical-align: top
      display: inline-block
      margin: 12px 0 0 10px
    .file-placeholder-retry-button
      margin: 5px 0 0
  .main
    .name
      line-height: 1.4
      color: rgba($black-color, .6)
      font-size: 14px
      font-weight: 500
      white-space: nowrap
      text-overflow: ellipsis
      overflow: hidden
  &.downloadable
    &:hover
      border-color: rgba($black-color, .15)
      box-shadow: inset 0 -3px 0 rgba(0, 0, 0, .02), 0 2px 0 rgba(1, 1, 1, .05)
  &.failed
    .progress-bar
      background-color: #ff6a6a
    .info
      color: #ff6a6a
.file-placeholder-with-progress
  position: relative
  max-width: 650px
